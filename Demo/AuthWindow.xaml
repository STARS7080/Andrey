<Window x:Class="Demo.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d"
        Title="Авторизация" Height="650" Width="550">
    <Grid>
        <Grid.ColumnDefinitions>
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="99*"></RowDefinition>
            <RowDefinition Height="60*"></RowDefinition>
            <RowDefinition Height="110*"></RowDefinition>
            <RowDefinition Height="60*"></RowDefinition>
            <RowDefinition Height="99*"></RowDefinition>
            <RowDefinition Height="140*"></RowDefinition>

        </Grid.RowDefinitions>
        <TextBlock TextAlignment="Center" FontSize="30px" HorizontalAlignment="Center" Height="41" TextWrapping="Wrap" Text="Авторизация" VerticalAlignment="Center" Width="330"/>
        <TextBlock TextAlignment="Center" FontSize="15" HorizontalAlignment="Center" Height="40" Margin="0,17,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" Width="202"/>
        <TextBlock TextAlignment="Center" FontSize="15" HorizontalAlignment="Center" Height="40" Margin="0,17,0,0" Grid.Row="3" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="202"/>
        <TextBox x:Name="txtLogin" HorizontalAlignment="Center" Height="50" Grid.Row="2"  VerticalAlignment="Center" Width="380" TextChanged="txtLogin_TextChanged" />
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Center" Height="50" Grid.Row="4"  VerticalAlignment="Center" Width="380" />
        <Button Content="Войти" HorizontalAlignment="Center" Height="60" Grid.Row="5" VerticalAlignment="Center" Width="120" Click="LoginButton_Click"/>
    </Grid>
</Window>
